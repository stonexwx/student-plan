<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.mapper.TypeMapperDao">

    <resultMap type="com.student.entity.TypeMapper" id="TypeMapperMap">
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="typeId" column="type_id" jdbcType="INTEGER"/>
        <result property="iid" column="iid" jdbcType="INTEGER"/>
        <result property="tid" column="tid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TypeMapperMap">
        select
          mid, type_id, iid, tid
        from type_mapper
        where mid = #{mid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TypeMapperMap">
        select
          mid, type_id, iid, tid
        from type_mapper
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="typeId != null">
                and type_id = #{typeId}
            </if>
            <if test="iid != null">
                and iid = #{iid}
            </if>
            <if test="tid != null">
                and tid = #{tid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from type_mapper
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="typeId != null">
                and type_id = #{typeId}
            </if>
            <if test="iid != null">
                and iid = #{iid}
            </if>
            <if test="tid != null">
                and tid = #{tid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mid" useGeneratedKeys="true">
        insert into type_mapper(type_id, iid, tid)
        values (#{typeId}, #{iid}, #{tid})
    </insert>

    <insert id="insertBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into type_mapper(type_id, iid, tid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.typeId}, #{entity.iid}, #{entity.tid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into type_mapper(type_id, iid, tid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.typeId}, #{entity.iid}, #{entity.tid})
        </foreach>
        on duplicate key update
        type_id = values(type_id),
        iid = values(iid),
        tid = values(tid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update type_mapper
        <set>
            <if test="typeId != null">
                type_id = #{typeId},
            </if>
            <if test="iid != null">
                iid = #{iid},
            </if>
            <if test="tid != null">
                tid = #{tid},
            </if>
        </set>
        where mid = #{mid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from type_mapper where mid = #{mid}
    </delete>

</mapper>

