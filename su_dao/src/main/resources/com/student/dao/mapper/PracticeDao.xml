<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.mapper.PracticeDao">

    <resultMap type="com.student.entity.Practice" id="PracticeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="sid" column="sid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PracticeMap">
        select
          id, uid, content, sid
        from practice
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PracticeMap">
        select
          id, uid, content, sid
        from practice
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from practice
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into practice(uid, content, sid)
        values (#{uid}, #{content}, #{sid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into practice(uid, content, sid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.uid}, #{entity.content}, #{entity.sid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into practice(uid, content, sid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uid}, #{entity.content}, #{entity.sid})
        </foreach>
        on duplicate key update
        uid = values(uid),
        content = values(content),
        sid = values(sid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update practice
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="sid != null">
                sid = #{sid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from practice where id = #{id}
    </delete>

</mapper>

