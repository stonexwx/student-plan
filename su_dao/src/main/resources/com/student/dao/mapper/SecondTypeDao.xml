<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.mapper.SecondTypeDao">

    <resultMap type="com.student.entity.SecondType" id="SecondTypeMap">
        <result property="sid" column="sid" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="fid" column="fid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SecondTypeMap">
        select
          sid, content, fid
        from second_type
        where sid = #{sid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SecondTypeMap">
        select
          sid, content, fid
        from second_type
        <where>
            <if test="sid != null">
                and sid = #{sid}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="fid != null">
                and fid = #{fid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from second_type
        <where>
            <if test="sid != null">
                and sid = #{sid}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="fid != null">
                and fid = #{fid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="sid" useGeneratedKeys="true">
        insert into second_type(content, fid)
        values (#{content}, #{fid})
    </insert>

    <insert id="insertBatch" keyProperty="sid" useGeneratedKeys="true">
        insert into second_type(content, fid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.content}, #{entity.fid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="sid" useGeneratedKeys="true">
        insert into second_type(content, fid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.fid})
        </foreach>
        on duplicate key update
        content = values(content),
        fid = values(fid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update second_type
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="fid != null">
                fid = #{fid},
            </if>
        </set>
        where sid = #{sid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from second_type where sid = #{sid}
    </delete>

</mapper>

